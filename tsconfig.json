{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {},
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "./build/**"
  ]
}
